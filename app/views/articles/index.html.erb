<h1>Listing articles</h1>

<p><%= link_to 'New article', new_article_path %></p>

<table>

    <thead>
        <tr>
            <th>Title</th>
            <th>Text</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.text%></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
        </tr>
        <% end %>
    </tbody>

</table>
